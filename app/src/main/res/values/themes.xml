<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Tema utama aplikasi -->
    <style name="Theme.PBO" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Warna utama -->
        <item name="colorPrimary">#DABE81</item>
        <item name="colorPrimaryVariant">#DA8181</item>
        <item name="colorOnPrimary">@android:color/white</item>
        <item name="colorOnError">@color/red</item>
        <item name="colorAccent">@color/Accents</item>

        <!--biar warna nda ngikut ke primary terus-->
        <item name="materialButtonStyle">@style/Widget.App.Button.NoTint</item>


        <!-- Nonaktifkan dark mode otomatis -->
