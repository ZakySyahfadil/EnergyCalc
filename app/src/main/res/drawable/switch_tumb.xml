<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Thumb saat ON (tetap putih, tapi bisa pakai elevation stroke) -->
    <item android:state_checked="true">
        <shape android:shape="oval">
            <size android:width="24dp" android:height="24dp"/>
            <solid android:color="@android:color/white"/>
            <stroke android:width="1dp" android:color="#20000000"/> <!-- subtle border -->
        </shape>
    </item>

    <!-- Thumb saat OFF -->
    <item>
        <shape android:shape="oval">
            <size android:width="22dp" android:height="22dp"/>
            <solid android:color="@android:color/white"/>
            <stroke android:width="1dp" android:color="#20000000"/>
        </shape>
    </item>

</selector>
