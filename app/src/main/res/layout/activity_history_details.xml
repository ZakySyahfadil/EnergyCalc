<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".zaky.HistoryDetails">

    <ImageView
        android:id="@+id/main_page_details1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/calculatedetailbg"
        android:layout_alignParentTop="true"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/bttnback"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:src="@drawable/ic_back_arrow"
        android:layout_marginTop="45dp"
        android:layout_marginStart ="15dp" />

    <TextView
        android:id="@+id/txt_details"
        android:layout_below="@id/bttnback"
        android:layout_marginTop="85dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Details"
        android:layout_centerHorizontal="true"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="20sp"/>

    <LinearLayout
        android:id="@+id/details"
        android:layout_below="@id/txt_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="40dp"
        android:layout_marginHorizontal="40dp">

        <TextView
            android:id="@+id/txt_energy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Energy"
            android:textStyle="bold"
            android:textSize="17sp"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/txt1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text = "= (watt × hours) ÷ 1000"
            android:textSize="17sp"
            android:textColor="@color/black"
            android:layout_marginTop="6dp"/>

        <TextView
            android:id="@+id/txt2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text = "= (0 × 0) ÷ 1000"
            android:textSize="17sp"
            android:textColor="@color/black"
            android:layout_marginTop="6dp"/>

        <TextView
            android:id="@+id/txt3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text = "= 0 kWh per week"
            android:textSize="17sp"
            android:textColor="@color/black"
            android:layout_marginTop="6dp"/>

        <TextView
            android:id="@+id/txt_cost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="cost"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginTop="20dp"
            android:textSize="17sp"/>

        <TextView
            android:id="@+id/txt5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text = "= kWh × 1.500 × 4"
            android:textSize="17sp"
            android:layout_marginTop="6dp"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/txt6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text = "= 0 × 1.500 × 4"
            android:textSize="17sp"
            android:textColor="@color/black"
            android:layout_marginTop="6dp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/txt7"
        android:layout_below="@id/details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text = "Rp0/month"
        android:textColor="@color/silver"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>

</RelativeLayout>