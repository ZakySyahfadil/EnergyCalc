<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Nazwar.MainPageCalculateResults">

    <ImageView
        android:id="@+id/main_page_results"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/resultpage"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:scaleType="fitXY"
        android:adjustViewBounds="false"/>

    <ImageView
        android:id="@+id/panah"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:src="@drawable/ic_back_arrow"
        android:layout_marginTop="45dp"
        android:layout_marginStart ="15dp" />

    <TextView
        android:id="@+id/result"
        android:layout_below="@id/panah"
        android:layout_marginTop="85dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Result"
        android:layout_centerHorizontal="true"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/device"
        android:layout_below="@id/result"
        android:layout_marginTop="35dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="device_name"
        android:layout_centerHorizontal="true"
        android:textColor="@color/black"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/amount"
        android:layout_below="@id/device"
        android:layout_marginTop="35dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rp0/month"
        android:layout_centerHorizontal="true"
        android:textColor="@color/silver"
        android:textStyle="bold"
        android:textSize="23sp"/>

    <FrameLayout
        android:id="@+id/frame1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/amount"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp">

        <ImageView
            android:id="@+id/item1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/result_item1"
            android:paddingStart="5dp"
            android:layout_marginStart="5dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_gravity="center">

            <TextView
                android:id="@+id/txtPower"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="power"
                android:textColor="@color/black"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/AmtPower"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0 W"
                android:textColor="@color/black"
                android:textSize="20sp"/>
        </LinearLayout>
    </FrameLayout>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/amount"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp">

        <ImageView
            android:id="@+id/item2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/amount"
            android:src="@drawable/result_item1"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_gravity="center">

            <TextView
                android:id="@+id/txtDuration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="duration"
                android:textColor="@color/black"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/AmtDuration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0 minutes"
                android:textColor="@color/black"
                android:textSize="20sp"/>
        </LinearLayout>
    </FrameLayout>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/amount"
        android:paddingLeft="5dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp">

        <ImageView
            android:id="@+id/item3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/amount"
            android:src="@drawable/result_item1" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_gravity="center">

            <TextView
                android:id="@+id/txtFrequency"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="frequency"
                android:textColor="@color/black"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/AmtFrequency"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0 times"
                android:textColor="@color/black"
                android:textSize="20sp"/>
        </LinearLayout>
    </FrameLayout>

    <LinearLayout
        android:id="@+id/button"
        android:layout_below="@id/frame1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:paddingHorizontal="30dp">

        <Button
            android:id="@+id/btn_save"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/button_filled"
            android:text="Save"
            android:textColor="@color/white"
            android:textAllCaps="false"
            />

        <Button
            android:id="@+id/btn_detail"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/button_border"
            android:layout_marginStart="30dp"
            android:text="See Details"
            android:textColor="@color/brown"
            android:textAllCaps="false"/>
    </LinearLayout>

</RelativeLayout>